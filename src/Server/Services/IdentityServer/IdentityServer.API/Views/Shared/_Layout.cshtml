<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IdentityServer.API</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/shared/error-message-partial.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/users/create.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/users/index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IdentityServer.API.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            <div class="menu-container">
                <div class="d-flex justify-justify-content-center menu">
                    <div class="side-menu">
                        <div class="d-flex flex-column justify-content-center align-items-center profile-container">
                            <div class="profile-photo"></div>
                            <div class="mt-2">
                                <span class="username">@ViewData["Username"]</span>
                            </div>
                            <div class="mt-2 d-flex flex-column justify-content-center align-items-center user-manager-container">
                                <button type="button" class="btn btn-outline-secondary user-profile">Perfil</button>
                            </div>
                        </div>
                        <h1 class="menu-module">Gerenciamento de Usuários</h1>
                        <ul class="menu-list">
                            <li class="menu-item-container"><a class="menu-item" asp-action="index">Usuários</a></li>
                            <li class="menu-item-container">Roles</li>
                            <li class="menu-item-container">Claims</li>
                        </ul>
                    </div>
                    <div class="content">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
