@model ConfirmationModalViewModel

<div class="modal fade" id="@Model.TargetId" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">@Model.Title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Model.NameButtonClose</button>
        <button type="button" class="btn btn-primary">@Model.NameButtonSave</button>
      </div>
    </div>
  </div>
</div>