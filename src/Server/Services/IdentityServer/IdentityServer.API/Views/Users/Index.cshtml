@using IdentityServer.API.Application.ViewModels.Common.Pagination
@using IdentityServer.API.Application.ViewModels.Users
@model BasePaginationViewModel<UserViewModel>

@{
	ViewData["Title"] = "Gerenciamento de Usuários";
}

<div class="home-container">
	<div>
		<h2>Gerenciamento de Usuários</h2>
	</div>

    <a asp-action="create" class="mt-5 register-btn btn mr-2">Novo</a>

    <div class="table-responsive mt-3">
	    <table class="mt-3 table table-striped table-dark table-container">
            <thead>
                <tr>
                    <th scope="col">Usuário</th>
                    <th scope="col">E-mail</th>
                    <th scope="col">Telefone</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Data)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNumber</td>
                        <td>
                        <div class="row">
                            <div class="col-md-4">
                                <a asp-action="update" asp-route-id="@user.Id" class="action-btn btn">Editar</a>
                            </div>
                            <div class="col-md-4">
                                <a class="action-btn btn">Remover</a>
                            </div>
                        </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>